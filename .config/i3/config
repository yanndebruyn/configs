# Cmus controls
bindsym $mod+BackSpace exec --no-startup-id cmus-remote --play 
bindsym $mod+backslash exec --no-startup-id cmus-remote --pause
bindsym $mod+bracketleft exec --no-startup-id cmus-remote --prev
bindsym $mod+bracketright exec --no-startup-id cmus-remote --next
bindsym $mod+semicolon exec --no-startup-id cmus-remote --seek -5
bindsym $mod+apostrophe exec --no-startup-id cmus-remote --seek +5
bindsym $mod+equal exec --no-startup-id cmus-remote --volume +5%
bindsym $mod+minus exec --no-startup-id cmus-remote --volume -5%

# Pulse Audio keyboard controls
set $sink `pactl list short sinks | grep RUNNING | cut -f1`
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $sink +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $sink -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $sink toggle

