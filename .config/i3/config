        #status_command i3status --config ~/.config/i3/i3status.conf
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
				#output primary # Only output i3bar on primary monitor 
				workspace_buttons yes
				
				colors {
					background #222222
					statusline #eeeeee
					separator #666666
